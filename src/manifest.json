{
  "manifest_version": 2,
  "name": "Emojissue",
  "version": "0.0.3",

  "description":
    "Navigate between most positive reacted Github issue comments with just one click.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "author": "Alpcan AydÄ±n <alpcan@alpcanaydin.com>",
  "homepage_url": "https://github.com/alpcanaydin/emojissue",
  "offline_enabled": true,

  "permissions": ["https://github.com/*", "tabs", "webNavigation"],
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*/issues/*", "https://github.com/*/*/pull/*"],
      "css": ["emojissue.css"],
      "js": ["emojissue.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
